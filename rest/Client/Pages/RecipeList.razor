@page "/"
@using Labdays.DigitalCookbook.Rest.Shared
@inject HttpClient Http

<PageTitle>Recipes</PageTitle>

<h1>Recipes</h1>
<a href="/create" >Create new Recipe</a>
<a href="/manualcorrection">Manual correct scanned recipe</a>


<p>Recipe overview</p>
@if(recipes == null){
    <p>Loading...</p>
} else {
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Instruction</th>  
            <th></th>          
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in recipes)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>@recipe.Instruction</td>
                <td><a class="btn btn-primary" href="/editrecipe/@recipe.Id">edit</a></td>
            </tr>
        }
    </tbody>
</table>
}

@code {
    private Recipe[]? recipes;

    protected override async Task OnInitializedAsync()
    {
        recipes = await Http.GetFromJsonAsync<Recipe[]>("Cookbook");
    }
}
